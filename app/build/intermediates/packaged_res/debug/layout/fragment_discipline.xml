<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_discipline"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DisciplineList">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <Button
            android:id="@+id/button"
            android:layout_width="72dp"
            android:layout_height="86dp"
            android:text="+"
            android:textAlignment="gravity"
            android:textAllCaps="false"
            android:textColor="#000000"
            android:textSize="60sp"
            app:layout_constraintBottom_toTopOf="@id/Spisok"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:visibility="visible" />

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/Tablo"
            android:layout_width="409dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="1dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <com.google.android.material.tabs.TabItem
                android:id="@+id/Home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Home"
                tools:layout_editor_absoluteX="1dp"
                tools:layout_editor_absoluteY="664dp" />

            <com.google.android.material.tabs.TabItem
                android:id="@+id/People"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="People" />

            <com.google.android.material.tabs.TabItem
                android:id="@+id/Hat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hat"
                tools:layout_editor_absoluteX="274dp"
                tools:layout_editor_absoluteY="674dp" />

            <com.google.android.material.tabs.TabItem
                android:id="@+id/String"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Strings" />
        </com.google.android.material.tabs.TabLayout>

        <LinearLayout
            android:id="@+id/Spisok"
            android:layout_width="410dp"
            android:layout_height="607dp"
            android:layout_marginTop="76dp"
            android:layout_marginEnd="1dp"
            android:layout_marginBottom="48dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        </LinearLayout>

        <EditText
            android:id="@+id/DisciplineList"
            android:layout_width="178dp"
            android:layout_height="48dp"
            android:text="Ваши предметы"
            android:textSize="21sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/Spisok"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="410dp"
        android:layout_height="607dp"
        android:layout_marginTop="76dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="48dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />
</androidx.constraintlayout.widget.ConstraintLayout>