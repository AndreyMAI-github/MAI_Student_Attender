<?xml version="1.0" encoding="utf-8"?>
<resources>
    <color name="black">#FF000000</color>
    <color name="dark_blue">#002D7A</color>
    <color name="grey_bg">#F7F7F7</color>
    <color name="grey_bg_overlay">#F0F0F0</color>
    <color name="grey_txt">#676464</color>
    <color name="orange">#66FF651E</color>
    <color name="white">#FFFFFFFF</color>
    <string name="app_name">My Application</string>
    <string name="first_fragment_label">First Fragment</string>
    <string name="hello_first_fragment">Hello first fragment</string>
    <string name="hello_second_fragment">Hello second fragment. Arg: %1$s</string>
    <string name="next">Next</string>
    <string name="previous">Previous</string>
    <string name="second_fragment_label">Second Fragment</string>
    <string name="title_activity_group_attend">GroupAttendActivity</string>
    <style name="TextCaptionBlue">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/dark_blue</item>
        <item name="android:fontFamily">@font/actay_regular</item>
    </style>
    <style name="TextCaptionGrey">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/grey_txt</item>
        <item name="android:fontFamily">@font/actay_regular</item>
    </style>
    <style name="TextContent">
        <item name="android:textSize">21sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/actay_regular</item>
    </style>
    <style name="TextHead">
    <item name="android:textSize">20sp</item>
    <item name="android:textColor">@color/white</item>
    <item name="android:fontFamily">@font/actay_bold</item>
    </style>
    <style name="TextMainContent">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:font">@font/actay_bold</item>
    </style>
    <style name="Theme.MyApplication" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        
        <item name="colorPrimary">@color/dark_blue</item>
        <item name="colorPrimaryVariant">@color/grey_bg</item>
        <item name="colorOnPrimary">@color/white</item>
        
        <item name="colorSecondary">@color/orange</item>
        <item name="colorSecondaryVariant">@color/orange</item>
        <item name="colorOnSecondary">@color/black</item>
        
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        
    </style>
    <style name="Theme.MyApplication.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="Theme.MyApplication.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.MyApplication.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>
</resources>