<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.mai.mai_student_attender.panel_elements.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_groups"
        android:name="com.mai.mai_student_attender.panel_elements.groups.GroupsFragment"
        android:label="@string/title_groups"
        tools:layout="@layout/fragment_groups" />

    <fragment
        android:id="@+id/navigation_discipline"
        android:name="com.mai.mai_student_attender.panel_elements.discipline.DisciplineFragment"
        android:label="@string/title_discipline"
        tools:layout="@layout/fragment_discipline" >
        <action
            android:id="@+id/action_navigation_discipline_to_disciplineList"
            app:destination="@id/disciplineList" />
    </fragment>

    <fragment
        android:id="@+id/navigation_settings"
        android:name="com.mai.mai_student_attender.panel_elements.settings.SettingsFragment"
        android:label="@string/title_settings"
        tools:layout="@layout/fragment_settings" />
    <activity
        android:id="@+id/disciplineList"
        android:name="com.mai.mai_student_attender.DisciplineList"
        android:label="activity_discipline_list"
        tools:layout="@layout/activity_discipline_list" />
    <activity
        android:id="@+id/mainActivity"
        android:name="com.mai.mai_student_attender.MainActivity"
        android:label="activity_main"
        tools:layout="@layout/activity_main" />
    <!--(ПРОБЛЕМА label)-->
</navigation>